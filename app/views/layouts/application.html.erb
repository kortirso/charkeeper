<!DOCTYPE html>
<html lang="en" prefix="og: https://ogp.me/ns#">
  <head>
    <title><%= content_for(:title) || 'CharKeeper' %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="Keywords" content="Digital, interactive, character sheet, dungeons & dragons, pathfinder, daggerheart, dc20">
    <meta name="Description" content="Digital interactive character sheets for tabletop roleplaying games">
    <meta property="og:title" content="Digital interactive character sheets for tabletop roleplaying games" />
    <meta property="og:description" content="Digital interactive character sheets for tabletop roleplaying games" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://charkeeper.org" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <%= stylesheet_link_tag 'tailwind' %>
    <%= stylesheet_link_tag :application %>
  </head>
  <body>
    <main class="relative flex flex-col m-0 p-0 min-h-screen">
      <%= render 'controllers/web/shared/flash' %>
      <div class="w-full bg-white border-b border-gray-200 py-2">
        <% if current_page?(root_path) %>
          <div class="max-w-7xl mx-auto flex flex-row justify-end">
            <% if current_user %>
              <%= link_to t('web.users.signin.logout'), logout_path, class: 'underline' %>
            <% else %>
              <%= link_to t('web.users.signin.title'), new_signin_path, class: 'mr-4 underline' %>
              <%= link_to t('web.users.signup.title'), new_signup_path, class: 'underline' %>
            <% end %>
          </div>
        <% else %>
          <div class="max-w-7xl mx-auto flex flex-row justify-between">
            <%= link_to 'CharKeeper', root_path %>
            <div>
              <% if current_user %>
                <%= link_to t('web.users.signin.logout'), logout_path, class: 'underline' %>
              <% else %>
                <%= link_to t('web.users.signin.title'), new_signin_path, class: 'mr-4 underline' %>
                <%= link_to t('web.users.signup.title'), new_signup_path, class: 'underline' %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="flex flex-col flex-1 overflow-x-hidden">
        <%= yield %>
      </div>
      <%= render 'controllers/web/shared/footer' %>
      <% unless cookies[:charkeeper_cookie_banner] %>
        <div class="fixed bottom-16 right-4 p-4 bg-white rounded w-md shadow">
          <h2 class="text-lg font-medium! mb-4"><%= t('cookie_banner.title') %></h2>
          <p class="mb-2"><%= t('cookie_banner.p1') %></p>
          <p><%= t('cookie_banner.p2') %></p>
          <div class="absolute top-2 right-2">
            <%= link_to close_cookie_banner, aria: { label: t('close_cookie') } do %>
              <%= image_tag 'close.svg', class: 'w-10 h-10', alt: 'close', width: 40, height: 40 %>
            <% end %>
          </div>
        </div>
      <% end %>
    </main>
  </body>
</html>
