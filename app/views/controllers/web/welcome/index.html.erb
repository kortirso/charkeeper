<div class="max-w-7xl mx-auto py-32 px-8 xl:px-0 grid grid-cols-1 lg:grid-cols-2 gap-x-8 gap-y-16">
  <div>
    <h1 class="text-6xl mb-4 font-normal!"><%= t('web.welcome.index.title') %></h1>
    <p class="text-xl"><%= t('web.welcome.index.description') %></p>
    <% if current_user %>
      <div class="mt-4"><%= link_to t('web.welcome.index.dashboard_link'), dashboard_path, class: 'btn-big btn-primary inline-block' %></div>
    <% end %>
  </div>
  <div>
    <%= image_tag 'charkeeper.webp', alt: 'charkeeper', class: 'mx-auto rounded', width: 400, height: 661 %>
  </div>
</div>
<div class="max-w-7xl mx-auto mb-16 px-8 xl:px-0 grid grid-cols-1 lg:grid-cols-2 gap-x-8 gap-y-16">
  <div>
    <h2 class="text-4xl mb-4"><%= t('web.welcome.index.features_title') %></h2>
    <p class="mb-2"><%= t('web.welcome.index.feature_2') %></p>
    <p class="mb-2"><%= t('web.welcome.index.feature_1') %></p>
    <p class="mb-2"><%= t('web.welcome.index.feature_4') %></p>
    <p class="mb-2"><%= t('web.welcome.index.feature_3') %></p>
    <p class="mb-2"><%= t('web.welcome.index.feature_5') %></p>
  </div>
  <div>
    <h2 class="text-4xl mb-4"><%= t('web.welcome.index.work_on') %></h2>
    <p class="text-lg font-normal!"><%= t('web.welcome.index.telegram') %></p>
    <p class="mb-4">
      <%= t('web.welcome.index.telegram_description', href: link_to(t('web.welcome.index.telegram_link'), 'https://t.me/charkeeper_bot', class: 'underline', target: '_blank', rel: 'noopener noreferrer')).html_safe %>
    </p>
    <p class="text-lg font-normal!"><%= t('web.welcome.index.web') %></p>
    <p class="mb-4">
      <%= t('web.welcome.index.web_description', href: link_to(t('web.welcome.index.web_link'), dashboard_path, class: 'underline')).html_safe %>
    </p>
    <p class="text-lg font-normal!"><%= t('web.welcome.index.macos') %></p>
    <p class="mb-4">
      <%= t('web.welcome.index.macos_description', href: link_to(t('web.welcome.index.macos_link'), 'https://charkeeper.org/Charkeeper_0.2.14_aarch64.dmg', class: 'underline', download: 'Charkeeper.dmg')).html_safe %>
    </p>
    <p class="text-lg font-normal!"><%= t('web.welcome.index.android') %></p>
    <p class="mb-4">
      <%= t('web.welcome.index.android_description', href: link_to(t('web.welcome.index.android_link'), 'https://charkeeper.org/Charkeeper_0.2.14.apk', class: 'underline', download: 'Charkeeper.apk')).html_safe %>
    </p>
    <h2 class="text-4xl mb-4"><%= t('web.welcome.index.will_work_on') %></h2>
    <p class="text-lg font-normal!"><%= t('web.welcome.index.mobile') %></p>
    <p class="mb-4"><%= t('web.welcome.index.in_progress') %></p>
  </div>
</div>

<div class="max-w-7xl mx-auto mb-16 px-8 xl:px-0 grid grid-cols-1 lg:grid-cols-2 gap-x-8 gap-y-16">
