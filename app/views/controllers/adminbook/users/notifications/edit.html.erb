<%= form_with model: @notification, scope: :notification, url: adminbook_users_notification_path(@notification), method: 'patch', class: 'font-cascadia-light' do |form| %>
  <div class="form-field mb-2">
    <div><%= form.label 'Заголовок', class: 'form-label' %></div>
    <div><%= form.text_field :title, class: 'form-value w-80', required: true %></div>
  </div>
  <div class="form-field mb-2">
    <div><%= form.label 'Сообщение', class: 'form-label' %></div>
    <div><%= form.textarea :value, class: 'form-text text-sm', required: true, size: '100x7' %></div>
  </div>
  <div class="form-field mb-2">
    <div><%= form.label 'Пользователь', class: 'form-label' %></div>
    <div><%= form.text_field :user_id, class: 'form-text text-sm', required: true, size: '100x7' %></div>
  </div>
  <%= form.submit 'Update', class: 'btn btn-primary' %>
<% end %>
