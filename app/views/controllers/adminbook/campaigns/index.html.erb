<table class="table w-full text-sm">
  <thead>
    <tr>
      <td class="pr-2"></td>
      <td class="pr-2">ID</td>
      <td class="pr-2">Provider</td>
      <td class="pr-2">User ID</td>
      <td>Created</td>
    </tr>
  </thead>
  <tbody>
    <% @campaigns.each_with_index do |campaign, index| %>
      <tr>
        <td class="pr-2"><%= index + 1 %></td>
        <td class="pr-2"><%= campaign.id %></td>
        <td class="pr-2"><%= campaign.provider %></td>
        <td class="pr-2"><%= campaign.user_id %></td>
        <td><%= campaign.created_at.strftime('%d-%m-%Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @pagy.pages > 1 %>
  <div class="mt-6"><%== pagy_nav(@pagy) %></div>
<% end %>
