<table class="table w-full text-sm">
  <thead>
    <tr>
      <td>ID</td>
      <td>Slug</td>
      <td>Kind</td>
      <td>Name</td>
      <td>Data</td>
      <td>Info</td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td class="pr-4"><%= item.id %></td>
        <td class="pr-4"><%= item.slug %></td>
        <td class="pr-4"><%= item.kind %></td>
        <td class="pr-4">
          <% item.name.each do |key, value| %>
            <p class="text-sm"><%= key %> - <%= value %></p>
          <% end %>
        </td>
        <td class="pr-4">
          <% item.data.attributes.each do |key, value| %>
            <p class="text-sm"><%= key %> - <%= value %></p>
          <% end %>
        </td>
        <td class="pr-4">
          <% item.info.each do |key, value| %>
            <p class="text-sm"><%= key %> - <%= value %></p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
