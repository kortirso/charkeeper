<div class="mb-4">
  <%= link_to 'New spell', new_adminbook_spell_path(provider: params[:provider]), class: 'btn btn-primary font-cascadia-light' %>
</div>
<table class="table w-full text-sm font-cascadia-light">
  <thead>
    <tr>
      <td></td>
      <td>ID</td>
      <td>Slug</td>
      <td>Name</td>
      <td>Data</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @spells.each_with_index do |spell, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td class="pr-4">
          <%= link_to edit_adminbook_spell_path(spell.id, provider: params[:provider]), class: 'underline text-blue-400' do %>
            <%= spell.id %></td>
          <% end %>
        <td class="pr-4"><%= spell.slug %></td>
        <td class="pr-4">
          <% spell.name.each do |key, value| %>
            <p class="text-sm"><%= key %> - <%= value %></p>
          <% end %>
        </td>
        <td class="pr-4">
          <% spell.data.attributes.each do |key, value| %>
            <p class="text-sm"><%= key %> - <%= value %></p>
          <% end %>
        </td>
        <td>
          <%= button_to 'X', adminbook_spell_path(spell.id, provider: params[:provider]), method: :delete, class: 'btn-warning btn-small text-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
